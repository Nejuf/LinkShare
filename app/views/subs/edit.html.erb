<h1><%= @sub.name %></h1>

<%= render :partial => "layouts/errors" %>

<form action="<%=sub_url(@sub)%>" method="post">
  <input type="hidden" name="_method" value="put">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticiity_token%>">

  <label for="sub_name">Name</label>
  <input type="text" id="sub_name" name="sub[name]">

  <label for="sub_mod_id">Moderator</label>
  <select id="sub_mod_id" name="sub[mod_id]">
    <option selected="selected"><option>
    <% User.all.each do |user| %>
      <option value="<%=user.id%>"><%=user.username%></option>
    <% end %>
  </select>

  <input type="submit" value="Create Sub">
</form>
