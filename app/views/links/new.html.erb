<h2>Create a link</h2>

<%= render :partial => "layouts/errors" %>

<form action="<%=links_url%>" method="post">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">

  <label for="link_title">Title</label>
  <input type="text" id="link_title" name="link[title]">
  <br>

  <label for="link_url">URL</label>
  <input type="text" id="link_url" name="link[url]">
  <br>

  <label for="link_body">Description</label>
  <input type="text" id="link_body" name="link[body]">
  <br>

  <% Sub.all.each do |sub| %>
    <% html_id = "sub_ids_#{sub.id}"%>
    <input type="checkbox" name="sub_ids[]" value="<%= sub.id %>" id="<%=html_id%>">
    <label for="<%=html_id%>"><%= sub.name %></label>
  <% end%>

  <input type="hidden" name="link[user_id]" value="<%= current_user.id %>">

  <input type="submit" value="Add Link">
</form>