<h2>Edit link</h2>

<%= render :partial => "layouts/errors" %>

<form action="<%=link_url(@link)%>" method="post">
  <input type="hidden" name="_method" value="put">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">

  <label for="link_title">Title</label>
  <input type="text" id="link_title" name="link[title]" value="<%= @link.title %>">
  <br>

  <label for="link_url">URL</label>
  <input type="text" id="link_url" name="link[url]" value="<%= @link.url %>">
  <br>

  <label for="link_body">Description</label>
  <input type="text" id="link_body" name="link[body]" value="<%= @link.body %>">
  <br>

  <input type="hidden" name="sub_ids[]" value="">
  <% Sub.all.each do |sub| %>
    <% html_id = "sub_ids_#{sub.id}"%>
    <input type="checkbox" name="sub_ids[]" value="<%= sub.id %>" id="<%=html_id%>">
    <label for="<%=html_id%>"><%= sub.name %></label>
  <% end%>

  <input type="submit" value="Edit Link">
</form>